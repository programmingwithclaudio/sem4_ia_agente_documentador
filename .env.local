

# PostgreSQL Connection (Async for FastAPI)
DATABASE_URL=postgresql+asyncpg://postgres:mermaiddev@localhost:5432/auth_db

# PostgreSQL Connection (Sync for Alembic migrations)
DATABASE_SYNC_URL=postgresql://postgres:mermaiddev@localhost:5432/auth_db

# Redis for rate limiting and caching
REDIS_URL=redis://localhost:6379/0

# Generate a secure secret key with: openssl rand -hex 32
SECRET_KEY=change-this-super-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# SMTP Configuration (Example: Gmail)
# For Gmail: Enable "App Passwords" in your Google Account
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=noreply@yourapp.com
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_FROM_NAME=Auth Service
MAIL_TLS=True
MAIL_SSL=False

# Your frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# Google OAuth2
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# GitHub OAuth2
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Allowed origins (comma-separated) CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:5173

# RATE LIMITING
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_PER_HOUR=100

# development, staging, production
ENVIRONMENT=development
